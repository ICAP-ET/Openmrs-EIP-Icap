<routes xmlns="http://camel.apache.org/schema/spring">

    <route id="out-bound-db-sync" errorHandlerRef="recordingErrorHandler">
        <from uri="direct:out-bound-db-sync" />

        <log message="Processing db event: ${body}" loggingLevel="DEBUG" />

        <unmarshal>
            <json library="Jackson" unmarshalTypeName="org.openmrs.eip.component.entity.DbEvent" />
        </unmarshal>

        <setProperty name="affected-entity-id">
            <simple>${body.entityId}</simple>
        </setProperty>

        <choice>
            <when>
                <simple>${body.operation} == 'd'</simple>
                <setBody>
                    <simple>DELETE:${body.entityTableName}:${body.entityId}</simple>
                </setBody>

                <log message="Deleted entity payload -> ${body}" />
            </when>
            <otherwise>
                <log message="Loading entity from DB..." loggingLevel="DEBUG" />

                <toD uri="openmrs:extract?tableToSync=${body.entityTableName().toUpperCase()}&amp;uuid=${body.entityId}" />

                <log message="Loaded entity -> ${body}" />

                <choice>
                    <when>
                        <simple>${body} != '[]'</simple>
                        <setBody>
                            <jsonpath>$[0]</jsonpath>
                        </setBody>
                        <marshal>
                            <json library="Jackson" />
                        </marshal>
                    </when>
                    <otherwise>
                        <setBody>
                            <simple>${null}</simple>
                        </setBody>
                    </otherwise>
                </choice>
            </otherwise>
        </choice>

        <choice>
            <when>
                <simple>${body} != null</simple>
                <log message="Pushing entity to sync queue: {{camel.output.endpoint}}" loggingLevel="DEBUG" />

                <toD uri="{{camel.output.endpoint}}" />
            </when>
            <otherwise>
                <!-- TODO Log to a special failures log file or DB -->
                <log message="No entity found in the database matching identifier: ${exchangeProperty.affected-entity-id}" loggingLevel="ERROR" />
            </otherwise>
        </choice>

    </route>

</routes>
